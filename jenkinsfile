pipeline {
    agent any

    stages {
        stage('compile') {
            agent {
                docker {
                    image 'maven:3.9.6-eclipse-temurin-11-alpine'
                    reuseNode true
                }
            }

            steps {
            echo 'compiling'
            sh '''
            mvn clean compile
            ls > test.txt
            test -f "target/classes/org/example/Main.class"
            grep "target" test.txt
            grep "world" target/classes/org/example/Main.class
            '''
            }
        }
    }
}

